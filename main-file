                            ‚≠ê Total Stars: <strong id="final-stars">0</strong><br>
                            üî• Best Streak: <strong id="final-streak">0</strong><br>
                            üéØ Realms Completed: <strong>3/3</strong>
                        </p>
                    </div>
                    
                    <button class="btn" onclick="resetGame()">üîÑ Play Again</button>
                    <button class="btn btn-secondary" onclick="showScreen('start-screen')">üè† Main Menu</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Game State
        let gameState = {
            playerName: '',
            stars: 0,
            crystals: 0,
            streak: 0,
            bestStreak: 0,
            mathCompleted: false,
            spellingCompleted: false,
            memoryCompleted: false,
            currentMathProblem: null,
            currentWord: null,
            memoryMatches: 0,
            spellingAttempt: ''
        };
        
        // Math Problems (Grade 1 appropriate)
        const mathProblems = [
            { q: '3 + 4', a: 7, options: [7, 8, 6, 5] },
            { q: '8 - 3', a: 5, options: [5, 4, 6, 3] },
            { q: '2 + 5', a: 7, options: [6, 7, 8, 5] },
            { q: '9 - 4', a: 5, options: [4, 5, 6, 3] },
            { q: '6 + 2', a: 8, options: [7, 8, 9, 6] },
            { q: '7 - 2', a: 5, options: [5, 4, 6, 3] },
            { q: '4 + 4', a: 8, options: [7, 8, 9, 6] },
            { q: '10 - 3', a: 7, options: [6, 7, 8, 5] },
            { q: '5 + 3', a: 8, options: [7, 8, 9, 6] },
            { q: '6 - 1', a: 5, options: [4, 5, 6, 3] }
        ];
        
        // Spelling Words (Grade 1 appropriate with hints)
        const spellingWords = [
            { word: 'WAND', hint: 'A magical stick', scrambled: 'DANW' },
            { word: 'SPELL', hint: 'Magic words', scrambled: 'LLEPS' },
            { word: 'DRAGON', hint: 'A fire-breathing creature', scrambled: 'NAGORD' },
            { word: 'MAGIC', hint: 'Special power', scrambled: 'GICAM' },
            { word: 'CASTLE', hint: 'Where kings live', scrambled: 'LETCAS' }
        ];
        
        // Memory Items
        const memoryItems = ['ü¶Ñ', 'üêâ', 'üßô‚Äç‚ôÇÔ∏è', '‚ö°', 'üîÆ', 'üåü', 'ü¶Ñ', 'üêâ', 'üßô‚Äç‚ôÇÔ∏è', '‚ö°', 'üîÆ', 'üåü'];
        
        let currentMathIndex = 0;
        let currentSpellIndex = 0;
        let flippedCards = [];
        let matchedPairs = 0;
        
        // Screen Navigation
        function showScreen(screenId) {
            document.querySelectorAll('#main-screen > div').forEach(div => {
                div.classList.add('hidden');
            });
            document.getElementById(screenId).classList.remove('hidden');
        }
        
        function showNameInput() {
            showScreen('name-screen');
        }
        
        function showInstructions() {
            showScreen('instructions-screen');
        }
        
        function startGame() {
            const name = document.getElementById('wizard-name').value.trim();
            if (name) {
                gameState.playerName = name;
                document.getElementById('player-name-display').textContent = name;
                showScreen('menu-screen');
                updateProgress();
            } else {
                alert('Please enter your wizard name!');
            }
        }
        
        // Math Game
        function startMathGame() {
            if (gameState.mathCompleted) {
                alert('You already collected the Math Crystal! Try another realm.');
                return;
            }
            currentMathIndex = 0;
            showScreen('math-game');
            loadMathProblem();
        }
        
        function loadMathProblem() {
            const problem = mathProblems[currentMathIndex];
            gameState.currentMathProblem = problem;
            document.getElementById('math-level').textContent = currentMathIndex + 1;
            document.getElementById('math-problem').textContent = problem.q + ' = ?';
            document.getElementById('math-progress').style.width = (currentMathIndex / 5 * 100) + '%';
            document.getElementById('math-progress').textContent = currentMathIndex + '/5';
            
            const options = document.getElementById('math-options');
            options.innerHTML = '';
            problem.options.forEach((opt, idx) => {
                const btn = document.createElement('button');
                btn.className = 'answer-btn';
                btn.textContent = opt;
                btn.onclick = () => checkMathAnswer(idx);
                options.appendChild(btn);
            });
            
            document.getElementById('math-feedback').classList.add('hidden');
        }
        
        function checkMathAnswer(index) {
            const problem = gameState.currentMathProblem;
            const selected = problem.options[index];
            const buttons = document.querySelectorAll('#math-options .answer-btn');
            const feedback = document.getElementById('math-feedback');
            
            buttons.forEach(btn => btn.disabled = true);
            
            if (selected === problem.a) {
                buttons[index].classList.add('correct');
                feedback.textContent = '‚ú® Correct! Magical energy collected!';
                feedback.className = 'feedback success';
                gameState.stars += 10;
                gameState.streak++;
                if (gameState.streak > gameState.bestStreak) gameState.bestStreak = gameState.streak;
                
                createSpellEffect('‚ú®');
                
                setTimeout(() => {
                    currentMathIndex++;
                    if (currentMathIndex >= 5) {
                        completeMathRealm();
                    } else {
                        loadMathProblem();
                    }
                    updateStats();
                }, 1500);
            } else {
                buttons[index].classList.add('wrong');
                feedback.textContent = '‚ùå Not quite! Try again!';
                feedback.className = 'feedback error';
                gameState.streak = 0;
                updateStats();
                
                setTimeout(() => {
                    buttons.forEach(btn => {
                        btn.disabled = false;
                        btn.classList.remove('wrong');
                    });
                    feedback.classList.add('hidden');
                }, 1000);
            }
            feedback.classList.remove('hidden');
        }
        
        function completeMathRealm() {
            gameState.mathCompleted = true;
            gameState.crystals++;
            document.getElementById('math-crystal').style.opacity = '1';
            document.getElementById('math-crystal').classList.add('collected');
            alert('üéâ Congratulations! You earned the üî¥ Ruby Crystal of Numbers!');
            showScreen('menu-screen');
            updateProgress();
            updateStats();
        }
        
        // Spelling Game
        function startSpellingGame() {
            if (gameState.spellingCompleted) {
                alert('You already collected the Spelling Crystal! Try another realm.');
                return;
            }
            currentSpellIndex = 0;
            gameState.spellingAttempt = '';
            showScreen('spelling-game');
            loadSpellingWord();
        }
        
        function loadSpellingWord() {
            const word = spellingWords[currentSpellIndex];
            gameState.currentWord = word;
            document.getElementById('spell-level').textContent = currentSpellIndex + 1;
            document.getElementById('word-display').textContent = '_ '.repeat(word.word.length);
            document.getElementById('word-hint').textContent = 'Hint: ' + word.hint;
            document.getElementById('spell-progress').style.width = (currentSpellIndex / 5 * 100) + '%';
            document.getElementById('spell-progress').textContent = currentSpellIndex + '/5';
            
            const bank = document.getElementById('letter-bank');
            bank.innerHTML = '';
            const letters = word.scrambled.split('');
            letters.forEach((letter, idx) => {
                const tile = document.createElement('div');
                tile.className = 'letter-tile';
                tile.textContent = letter;
                tile.onclick = () => addLetter(letter, tile);
                bank.appendChild(tile);
            });
            
            gameState.spellingAttempt = '';
            document.getElementById('spell-feedback').classList.add('hidden');
        }
        
        function addLetter(letter, tile) {
            if (tile.classList.contains('used')) return;
            
            gameState.spellingAttempt += letter;
            tile.classList.add('used');
            
            const word = gameState.currentWord.word;
            let display = '';
            for (let i = 0; i < word.length; i++) {
                if (i < gameState.spellingAttempt.length) {
                    display += gameState.spellingAttempt[i] + ' ';
                } else {
                    display += '_ ';
                }
            }
            document.getElementById('word-display').textContent = display;
            
            if (gameState.spellingAttempt.length === word.length) {
                submitSpelling();
            }
        }
        
        function clearSpelling() {
            gameState.spellingAttempt = '';
            document.getElementById('word-display').textContent = '_ '.repeat(gameState.currentWord.word.length);
            document.querySelectorAll('.letter-tile').forEach(tile => {
                tile.classList.remove('used');
            });
            document.getElementById('spell-feedback').classList.add('hidden');
        }
        
        function submitSpelling() {
            const feedback = document.getElementById('spell-feedback');
            const word = gameState.currentWord.word;
            
            if (gameState.spellingAttempt === word) {
                feedback.textContent = '‚ú® Perfect spelling! Word magic activated!';
                feedback.className = 'feedback success';
                gameState.stars += 15;
                gameState.streak++;
                if (gameState.streak > gameState.bestStreak) gameState.bestStreak = gameState.streak;
                
                createSpellEffect('üìñ');
                
                setTimeout(() => {
                    currentSpellIndex++;
                    if (currentSpellIndex >= 5) {
                        completeSpellingRealm();
                    } else {
                        loadSpellingWord();
                    }
                    updateStats();
                }, 1500);
            } else {
                feedback.textContent = '‚ùå That\'s not quite right. Try again!';
                feedback.className = 'feedback error';
                gameState.streak = 0;
                clearSpelling();
                updateStats();
            }
            feedback.classList.remove('hidden');
        }
        
        function completeSpellingRealm() {
            gameState.spellingCompleted = true;
            gameState.crystals++;
            document.getElementById('spell-crystal').style.opacity = '1';
            document.getElementById('spell-crystal').classList.add('collected');
            alert('üéâ Amazing! You earned the üü† Amber Crystal of Words!');
            showScreen('menu-screen');
            updateProgress();
            updateStats();
        }
        
        // Memory Game
        function startMemoryGame() {
            if (gameState.memoryCompleted) {
                alert('You already collected the Memory Crystal! Try another realm.');
                return;
            }
            matchedPairs = 0;
            flippedCards = [];
            showScreen('memory-game');
            initMemoryGame();
        }
        
        function initMemoryGame() {
            const grid = document.getElementById('memory-grid');
            grid.innerHTML = '';
            
            // Shuffle items
            const shuffled = [...memoryItems].sort(() => Math.random() - 0.5);
            
            shuffled.forEach((item, idx) => {
                const card = document.createElement('div');
                card.className = 'memory-card';
                card.dataset.index = idx;
                card.dataset.item = item;
                card.innerHTML = '<span style="font-size: 1.5em;">üé¥</span>';
                card.onclick = () => flipCard(card);
                grid.appendChild(card);
            });
            
            document.getElementById('memory-progress').style.width = '0%';
            document.getElementById('memory-progress').textContent = '0/6';
            document.getElementById('memory-feedback').classList.add('hidden');
        }
        
        function flipCard(card) {
            if (card.classList.contains('flipped') || card.classList.contains('matched') || flippedCards.length >= 2) return;
            
            card.classList.add('flipped');
            card.innerHTML = `<span style="font-size: 2em;">${card.dataset.item}</span>`;
            flippedCards.push(card);
            
            if (flippedCards.length === 2) {
                checkMatch();
            }
        }
        
        function checkMatch() {
            const [card1, card2] = flippedCards;
            const match = card1.dataset.item === card2.dataset.item;
            const feedback = document.getElementById('memory-feedback');
            
            setTimeout(() => {
                if (match) {
                    card1.classList.add('matched');
                    card2.classList.add('matched');
                    matchedPairs++;
                    
                    document.getElementById('memory-progress').style.width = (matchedPairs / 6 * 100) + '%';
                    document.getElementById('memory-progress').textContent = matchedPairs + '/6';
                    
                    feedback.textContent = '‚ú® Match found! Memory power increased!';
                    feedback.className = 'feedback success';
                    
                    gameState.stars += 20;
                    gameState.streak++;
                    if (gameState.streak > gameState.bestStreak) gameState.bestStreak = gameState.streak;
                    
                    createSpellEffect('üß†');
                    
                    if (matchedPairs === 6) {
                        setTimeout(completeMemoryRealm, 1000);
                    }
                } else {
                    card1.classList.remove('flipped');
                    card2.classList.remove('flipped');
                    card1.innerHTML = '<span style="font-size: 1.5em;">üé¥</span>';
                    card2.innerHTML = '<span style="font-size: 1.5em;">üé¥</span>';
                    
                    feedback.textContent = '‚ùå Not a match! Try again!';
                    feedback.className = 'feedback error';
                    gameState.streak = 0;
                }
                
                flippedCards = [];
                feedback.classList.remove('hidden');
                updateStats();
                
                setTimeout(() => {
                    feedback.classList.add('hidden');
                }, 1500);
            }, 1000);
        }
        
        function completeMemoryRealm() {
            gameState.memoryCompleted = true;
            gameState.crystals++;
            document.getElementById('memory-crystal').style.opacity = '1';
            document.getElementById('memory-crystal').classList.add('collected');
            alert('üéâ Incredible! You earned the üü° Topaz Crystal of Memory!');
            showScreen('menu-screen');
            updateProgress();
            updateStats();
        }
        
        // Helper Functions
        function updateStats() {
            document.getElementById('stars-count').textContent = gameState.stars;
            document.getElementById('crystals-count').textContent = gameState.crystals + '/6';
            document.getElementById('streak-count').textContent = 'Streak: ' + gameState.streak;
        }
        
        function updateProgress() {
            const completed = [gameState.mathCompleted, gameState.spellingCompleted, gameState.memoryCompleted].filter(Boolean).length;
            const percent = (completed / 3) * 100;
            document.getElementById('progress-bar').style.width = percent + '%';
            document.getElementById('progress-bar').textContent = Math.round(percent) + '%';
            
            if (completed === 3) {
                setTimeout(showVictory, 500);
            }
        }
        
        function showVictory() {
            document.getElementById('final-stars').textContent = gameState.stars;
            document.getElementById('final-streak').textContent = gameState.bestStreak;
            showScreen('victory-screen');
            createConfetti();
        }
        
        function createSpellEffect(emoji) {
            const effect = document.createElement('div');
            effect.className = 'spell-effect';
            effect.textContent = emoji;
            document.body.appendChild(effect);
            setTimeout(() => effect.remove(), 1000);
        }
        
        function createConfetti() {
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + 'vw';
                    confetti.style.backgroundColor = ['#ffd700', '#ff6b6b', '#4ecdc4', '#45b7d1', '#96ceb4'][Math.floor(Math.random() * 5)];
                    confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
                    document.body.appendChild(confetti);
                    setTimeout(() => confetti.remove(), 4000);
                }, i * 100);
            }
        }
        
        function resetGame() {
            gameState = {
                playerName: gameState.playerName,
                stars: 0,
                crystals: 0,
                streak: 0,
                bestStreak: 0,
                mathCompleted: false,
                spellingCompleted: false,
                memoryCompleted: false,
                currentMathProblem: null,
                currentWord: null,
                memoryMatches: 0,
                spellingAttempt: ''
            };
            
            document.querySelectorAll('.crystal').forEach(crystal => {
                crystal.style.opacity = '0.3';
                crystal.classList.remove('collected');
            });
            
            updateStats();
            showScreen('menu-screen');
            updateProgress();
        }
        
        // Initialize
        updateStats();
    </script>
</body>
</html>
